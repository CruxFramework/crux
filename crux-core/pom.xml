<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cruxframework</groupId>
	<artifactId>crux-core</artifactId>
	<packaging>pom</packaging>
	<name>Crux Core</name>
	<version>1.0.0</version>
	<description>Core of Crux Framework</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <javadoc.dir>${basedir}/javadoc</javadoc.dir>
    </properties>

    <modules>
	    <module>../crux-runtime</module>
	    <module>../crux-dev</module>
	    <module>../crux-widgets</module>
	    <module>../crux-smart-faces</module>
    </modules>

    <parent>
        <groupId>org.sonatype.oss</groupId>
        <artifactId>oss-parent</artifactId>
        <version>7</version>
        <relativePath>org.sonatype.oss:oss-parent</relativePath>
    </parent>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    
    <developers>
        <developer>
            <id>thiago</id>
            <name>Thiago da Rosa de Bustamante</name>
            <email>thiago@cruxframework.org</email>
        </developer>
        <developer>
            <id>gesse</id>
            <name>Gessé Dafé</name>
            <email>gesse@cruxframework.org</email>
        </developer>
        <developer>
            <id>samuel</id>
            <name>Samuel Almeida Cardoso</name>
            <email>samuel@cruxframework.org</email>
        </developer>
        <developer>
            <id>alexandre.costa</id>
            <name>Alexandre Augusto de Souza Costa</name>
            <email>alexandre@triggolabs.org</email>
        </developer>
    </developers>

    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/java</directory>
                <includes>
                    <include>**/*.java</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <profiles>
        <!-- Deploy at sonatype repository -->
        <profile>
            <id>sonatype_stage</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>2.2.1</version>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>2.9.1</version>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <docencoding>${project.build.sourceEncoding}</docencoding>
                                    <charset>${project.build.sourceEncoding}</charset>
                                    <outputDirectory>${javadoc.dir}</outputDirectory>
                                    <overview>${javadoc.dir}/overview.html</overview>
                                    <source>1.5</source>
                                    <destDir></destDir>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- Deploy at internal repository -->
        <profile>
            <id>internal</id>
            <distributionManagement>
                <repository>
                    <id>crux-internal-repository</id>
                    <name>Crux Internal Repository</name>
                    <url>http://repo.sysmap.com.br/artifactory/cruxframework</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>
</project>