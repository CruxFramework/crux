	<replace-with class="org.cruxframework.crux.widgets.client.textbox.NumberTextBox.DevicesImpl">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.textbox.NumberTextBox.Impl" />
		<none>
			<when-property-is name="device.features" value="largeDisplayMouse" />
		</none>
	</replace-with>
	
	<!-- FormDisplay -->
	<replace-with class="org.cruxframework.crux.widgets.client.formdisplay.FormDisplay.FormEntrySmall">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.formdisplay.FormDisplay.FormEntry" />
		<any>
			<when-property-is name="device.features" value="smallDisplayTouch" />
			<when-property-is name="device.features" value="smallDisplayArrows" />
		</any>
	</replace-with>
    
	<!-- FileUploader  -->
	<replace-with class="org.cruxframework.crux.widgets.client.uploader.FileUploaderSmallImpl">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.uploader.AbstractFileUploader" />
		<any>
			<when-property-is name="device.features" value="smallDisplayTouch" />
			<when-property-is name="device.features" value="smallDisplayArrows" />
		</any>
	</replace-with>
	<replace-with class="org.cruxframework.crux.widgets.client.uploader.FileUploaderLargeImpl">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.uploader.AbstractFileUploader" />
		<none>
			<when-property-is name="device.features" value="smallDisplayTouch" />
			<when-property-is name="device.features" value="smallDisplayArrows" />
		</none>
	</replace-with>
    
</module>