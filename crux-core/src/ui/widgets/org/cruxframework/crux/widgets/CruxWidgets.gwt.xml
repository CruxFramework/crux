<module>
    <inherits name="org.cruxframework.crux.core.Crux"/>
    <replace-with
    	class="org.cruxframework.crux.widgets.client.event.paste.PasteEventSourceRegisterOperaImpl">
    	<when-type-is class="org.cruxframework.crux.widgets.client.event.paste.PasteEventSourceRegisterImpl" />
    	<when-property-is name="user.agent" value="opera" />
    </replace-with>
    <replace-with
    	class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameStateMonitorSafariImpl">
    	<when-type-is class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameStateMonitor" />
    	<any>
      		<when-property-is name="user.agent" value="safari" />
    	</any>
    </replace-with>
    <replace-with
    	class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameStateMonitorOperaImpl">
    	<when-type-is class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameStateMonitor" />
    	<any>
    		<when-property-is name="user.agent" value="opera" />
    	</any>
    </replace-with>
    <replace-with
    	class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameStateMonitorIEImpl">
    	<when-type-is class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameStateMonitor" />
    	<any>
      		<when-property-is name="user.agent" value="ie6" />
    		<when-property-is name="user.agent" value="ie8" />
    		<when-property-is name="user.agent" value="ie9" />
    	</any>
    </replace-with>
    <replace-with
    	class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameStateMonitorMozillaImpl">
    	<when-type-is class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameStateMonitor" />
    	<any>
      		<when-property-is name="user.agent" value="gecko1_8" />
    	</any>
    </replace-with>
	<replace-with
    	class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameAccessorIE">
    	<when-type-is class="org.cruxframework.crux.widgets.client.util.FrameUtils.FrameAccessorImpl" />
    	<any>
      		<when-property-is name="user.agent" value="ie6" />
    		<when-property-is name="user.agent" value="ie8" />
    		<when-property-is name="user.agent" value="ie9" />
    	</any>
    </replace-with>
    <replace-with
    	class="org.cruxframework.crux.widgets.client.util.TextSelectionUtils.UnselectableIEImpl">
    	<when-type-is class="org.cruxframework.crux.widgets.client.util.TextSelectionUtils.Unselectable" />
    	<any>
      		<when-property-is name="user.agent" value="ie6" />
    		<when-property-is name="user.agent" value="ie8" />
    		<when-property-is name="user.agent" value="ie9" />
    	</any>
    </replace-with>
    <replace-with
    	class="org.cruxframework.crux.widgets.client.util.TextSelectionUtils.UnselectableMozImpl">
    	<when-type-is class="org.cruxframework.crux.widgets.client.util.TextSelectionUtils.Unselectable" />
    	<any>
      		<when-property-is name="user.agent" value="gecko1_8" />
    	</any>
    </replace-with>

	<replace-with
		class="org.cruxframework.crux.widgets.client.paging.NavigationButtonsPager.MobileButtonPanelCreator">
		<when-type-assignable
			class="org.cruxframework.crux.widgets.client.paging.NavigationButtonsPager.ButtonPanelCreator" />
		<any>
			<when-property-is name="user.agent" value="safari" />
		</any>
	</replace-with>
	<replace-with
		class="org.cruxframework.crux.widgets.client.grid.AbstractTablelessGridStructure.CellRendererIE">
    	<when-type-assignable class="org.cruxframework.crux.widgets.client.grid.AbstractTablelessGridStructure.CellRenderer" />
    	<any>
      		<when-property-is name="user.agent" value="ie6" />
    		<when-property-is name="user.agent" value="ie8" />
    	</any>
    </replace-with>
    
    <!-- RssPanel widget -->
    <replace-with class="org.cruxframework.crux.widgets.client.rss.RssPanel.RssPanelLargeImpl">
        <when-type-assignable class="org.cruxframework.crux.widgets.client.rss.RssPanel.RssPanelImpl" />
        <any>
            <when-property-is name="device.features" value="largeDisplayMouse" />
            <when-property-is name="device.features" value="largeDisplayTouch" />
            <when-property-is name="device.features" value="largeDisplayArrows" />
        </any>
    </replace-with>
    <replace-with class="org.cruxframework.crux.widgets.client.rss.RssPanel.RssPanelSmallImpl">
        <when-type-assignable class="org.cruxframework.crux.widgets.client.rss.RssPanel.RssPanelImpl" />
        <any>
            <when-property-is name="device.features" value="smallDisplayTouch" />
            <when-property-is name="device.features" value="smallDisplayArrows" />
        </any>
    </replace-with>

    <!-- TopToolBar panel animation handler -->
	<replace-with class="org.cruxframework.crux.widgets.client.toptoolbar.TopToolBarArrowsSmallController.WebkitPanelAnimation">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.toptoolbar.TopToolBarArrowsSmallController.PanelAnimation" />
		<any>
			<when-property-is name="user.agent" value="safari" />
		</any>
	</replace-with>
	<replace-with class="org.cruxframework.crux.widgets.client.toptoolbar.TopToolBarArrowsSmallController.JSPanelAnimation">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.toptoolbar.TopToolBarArrowsSmallController.PanelAnimation" />
    	<none>
      		<when-property-is name="user.agent" value="safari" />
    	</none>
	</replace-with>

    <!-- TopToolBar panel touch handler -->
	<replace-with class="org.cruxframework.crux.widgets.client.toptoolbar.TopToolBarTouchSmallController.WebkitGripHandler">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.toptoolbar.TopToolBarTouchSmallController.GripHandler" />
		<any>
			<when-property-is name="user.agent" value="safari" />
		</any>
	</replace-with>
	
	<!-- Button  -->
	<replace-with class="org.cruxframework.crux.widgets.client.button.Button.ButtonNoTouchImpl">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.button.Button.ButtonImpl" />
		<none>
			<when-property-is name="device.features" value="smallDisplayTouch" />
			<when-property-is name="device.features" value="largeDisplayTouch" />
		</none>
	</replace-with>
	<replace-with class="org.cruxframework.crux.widgets.client.button.Button.ButtonTouchImpl">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.button.Button.ButtonImpl" />
		<any>
			<when-property-is name="device.features" value="smallDisplayTouch" />
			<when-property-is name="device.features" value="largeDisplayTouch" />
		</any>
	</replace-with>

    <!-- StackMenu -->
    <replace-with class="org.cruxframework.crux.widgets.client.stackmenu.StackMenuItemCaption.NoTouchImpl">
        <when-type-assignable class="org.cruxframework.crux.widgets.client.stackmenu.StackMenuItemCaption.FocusAreaStackImpl" />
        <none>
            <when-property-is name="device.features" value="smallDisplayTouch" />
            <when-property-is name="device.features" value="largeDisplayTouch" />
        </none>
    </replace-with>
    <replace-with class="org.cruxframework.crux.widgets.client.stackmenu.StackMenuItemCaption.TouchImpl">
        <when-type-assignable class="org.cruxframework.crux.widgets.client.stackmenu.StackMenuItemCaption.FocusAreaStackImpl" />
        <any>
            <when-property-is name="device.features" value="smallDisplayTouch" />
            <when-property-is name="device.features" value="largeDisplayTouch" />
        </any>
    </replace-with>

    <!-- Image -->
    <replace-with class="org.cruxframework.crux.widgets.client.image.Image.NoTouchImpl">
        <when-type-assignable class="org.cruxframework.crux.widgets.client.image.Image.ImageImpl" />
        <none>
            <when-property-is name="device.features" value="smallDisplayTouch" />
            <when-property-is name="device.features" value="largeDisplayTouch" />
        </none>
    </replace-with>
    <replace-with class="org.cruxframework.crux.widgets.client.image.Image.TouchImpl">
        <when-type-assignable class="org.cruxframework.crux.widgets.client.image.Image.ImageImpl" />
        <any>
            <when-property-is name="device.features" value="smallDisplayTouch" />
            <when-property-is name="device.features" value="largeDisplayTouch" />
        </any>
    </replace-with>

	<!-- Anchor  -->
	<replace-with class="org.cruxframework.crux.widgets.client.anchor.Anchor.AnchorNoTouchImpl">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.anchor.Anchor.AnchorImpl" />
		<none>
			<when-property-is name="device.features" value="smallDisplayTouch" />
			<when-property-is name="device.features" value="largeDisplayTouch" />
		</none>
	</replace-with>
	<replace-with class="org.cruxframework.crux.widgets.client.anchor.Anchor.AnchorTouchImpl">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.anchor.Anchor.AnchorImpl" />
		<any>
			<when-property-is name="device.features" value="smallDisplayTouch" />
			<when-property-is name="device.features" value="largeDisplayTouch" />
		</any>
	</replace-with>

	<!-- PromoBanner  -->
	<replace-with class="org.cruxframework.crux.widgets.client.promobanner.BannerImplLargeNoTouch">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.promobanner.BannerImpl" />
		<any>
			<when-property-is name="device.features" value="largeDisplayArrows" />
			<when-property-is name="device.features" value="largeDisplayMouse" />
		</any>
	</replace-with>
	<replace-with class="org.cruxframework.crux.widgets.client.promobanner.BannerImplSmallNoTouch">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.promobanner.BannerImpl" />
		<any>
			<when-property-is name="device.features" value="smallDisplayArrows" />
		</any>
	</replace-with>
	<replace-with class="org.cruxframework.crux.widgets.client.promobanner.BannerImplSmallTouch">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.promobanner.BannerImpl" />
		<any>
			<when-property-is name="device.features" value="smallDisplayTouch" />
		</any>
	</replace-with>
	<replace-with class="org.cruxframework.crux.widgets.client.promobanner.BannerImplLargeTouch">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.promobanner.BannerImpl" />
		<any>
			<when-property-is name="device.features" value="largeDisplayTouch" />
		</any>
	</replace-with>

	<!-- SelectablePanel  -->
	<replace-with class="org.cruxframework.crux.widgets.client.selectablepanel.SelectablePanel.PanelEventsHandlerNoTouchImpl">
