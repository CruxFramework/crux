	<replace-with class="org.cruxframework.crux.widgets.client.selectablepanel.SelectablePanel.PanelEventsHandlerTouchImpl">
		<when-type-assignable class="org.cruxframework.crux.widgets.client.selectablepanel.SelectablePanel.PanelEventsHandler" />
