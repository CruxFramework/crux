<x:xdevice xmlns="http://www.w3.org/1999/xhtml"
		   xmlns:x="http://www.cruxframework.org/xdevice"
           xmlns:gwt="http://www.cruxframework.org/crux/gwt"
		   xmlns:crux="http://www.cruxframework.org/crux/widgets"
		   xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
           useController="menuTabsDisposalLargeController" height="100%">

	<gwt:verticalPanel id="menuTabsHeaderSplitPanel" spacing="0" styleName="menuTabsHeaderSplitPanel" height="100%" width="100%" >
		<gwt:cell>
			<gwt:flowPanel id="menuTabsHeader" styleName="menuTabsHeader"/>
		</gwt:cell>
		<gwt:cell>
			<gwt:horizontalPanel id="menuTabsSplitPanel" height="100%" width="100%" styleName="menuTabsSplitPanel" spacing="0">
				<gwt:cell>
					<gwt:flowPanel id="menuPanel" styleName="menuEntriesContainer"/>
				</gwt:cell>
				<gwt:cell>
					<crux:tabViewContainer id="viewContainer" width="100%" height="100%"/>
				</gwt:cell>
			</gwt:horizontalPanel>
		</gwt:cell>
	</gwt:verticalPanel>
		
</x:xdevice>