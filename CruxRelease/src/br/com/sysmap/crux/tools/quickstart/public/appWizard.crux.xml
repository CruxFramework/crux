<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.sysmap.com.br/crux" 
	xmlns:crux="http://www.sysmap.com.br/crux/widgets"
	xmlns:gwt="http://www.sysmap.com.br/crux/gwt"
	xmlns:q="http://www.sysmap.com.br/templates/quickstart" 
>
<q:quickStartPage>
	<q:body>
		<c:screen useController="quickStartController" title="${quickMsg.appTitle}" onLoad="quickStartController.onLoad"/>
		<br/>
		<center>
			<crux:decoratedPanel id="border" width="600" height="400">
				<crux:widget>
					<crux:wizard id="quickstartWizard" width="100%"  height="100%"
					             onFinish="quickStartController.finish" onCancel="quickStartController.back">
						<crux:steps>
							<crux:widget id="welcomeStep" label="${quickMsg.welcomeQuickstartLabel}" >
								<gwt:dockPanel id="welcome">
									<gwt:label id="welcomeLabel" text="${quickMsg.welcomeQuickstartMsg}"/>
								</gwt:dockPanel>
							</crux:widget>
							<crux:widget id="ideInfoStep" label="${quickMsg.ideInfoLabel}" >
								<gwt:dockPanel id="ideInfoCenterPanel" >
									<gwt:cell verticalAlignment="top" direction="center" horizontalAlignment="center">
										<gwt:grid id="ideInfo" cellSpacing="5" >
											<gwt:row>
												<gwt:cell width="150">
													<gwt:text>${quickMsg.workspaceDir}</gwt:text>
												</gwt:cell>
												<gwt:cell>
													<gwt:widget><gwt:textBox id="workspaceDir" width="400"/></gwt:widget>
												</gwt:cell>
											</gwt:row>
										</gwt:grid>
									</gwt:cell>
								</gwt:dockPanel>
							</crux:widget>
							<crux:widget id="projectInfoStep" label="${quickMsg.projectInfo}" >
								<gwt:dockPanel id="projectInfoCenterPanel" >
									<gwt:cell verticalAlignment="top" direction="center" horizontalAlignment="center">
										<gwt:grid id="projectInfo" cellSpacing="5" >
											<gwt:row>
												<gwt:cell width="150">
													<gwt:text>${quickMsg.projectName}</gwt:text>
												</gwt:cell>
												<gwt:cell>
													<gwt:widget><gwt:textBox id="projectName" width="200"/></gwt:widget>
												</gwt:cell>
											</gwt:row>
											<gwt:row>
												<gwt:cell  width="150">
													<gwt:text>${quickMsg.hostedModeStartupURL}</gwt:text>
												</gwt:cell>
												<gwt:cell>
													<gwt:widget><gwt:textBox id="hostedModeStartupURL" width="200"/></gwt:widget>
												</gwt:cell>
											</gwt:row>
											<gwt:row>
												<gwt:cell  width="150">
													<gwt:text>${quickMsg.hostedModeStartupModule}</gwt:text>
												</gwt:cell>
												<gwt:cell>
													<gwt:widget><gwt:textBox id="hostedModeStartupModule" width="200"/></gwt:widget>
												</gwt:cell>
											</gwt:row>
											<gwt:row>
												<gwt:cell  width="150">
													<gwt:text>${quickMsg.hostedModeVMArgs}</gwt:text>
												</gwt:cell>
												<gwt:cell>
													<gwt:widget><gwt:textBox id="hostedModeVMArgs" width="200"/></gwt:widget>
												</gwt:cell>
											</gwt:row>
											<gwt:row>
												<gwt:cell  width="150">
													<gwt:text>${quickMsg.useCruxModuleExtension}</gwt:text>
												</gwt:cell>
												<gwt:cell>
													<gwt:widget><gwt:checkBox id="useCruxModuleExtension" onChange="quickStartController.useModuleCheckChange"/></gwt:widget>
												</gwt:cell>
											</gwt:row>
											<gwt:row visible="false">
												<gwt:cell  width="150">
													<gwt:text>${quickMsg.cruxModuleDescription}</gwt:text>
												</gwt:cell>
												<gwt:cell>
													<gwt:widget><gwt:textBox id="cruxModuleDescription" width="200" /></gwt:widget>
												</gwt:cell>
											</gwt:row>
										</gwt:grid>
									</gwt:cell>
								</gwt:dockPanel>
							</crux:widget>
							<crux:widget id="summaryStep" label="${quickMsg.summaryQuickstartLabel}" onEnter="quickStartController.onSummaryEnter"
										 onLeave="quickStartController.onSummaryLeave">
								<gwt:dockPanel id="summary">
									<gwt:label id="summaryLabel" text="${quickMsg.summaryQuickstartMsg}"/>
								</gwt:dockPanel>
							</crux:widget>
						</crux:steps>								
						<crux:controlBar/>
						<crux:navigationBar allowSelectStep="false"/>
					</crux:wizard>
				</crux:widget>
			</crux:decoratedPanel>
		</center>
	</q:body>
</q:quickStartPage>
</html>

