<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.sysmap.com.br/crux" 
	xmlns:crux="http://www.sysmap.com.br/crux/widgets"
	xmlns:gwt="http://www.sysmap.com.br/crux/gwt"
	xmlns:q="http://www.sysmap.com.br/templates/quickstart" 
>
<q:quickStartPage>
	<q:screenDeclaration>
		<c:screen useController="examplesController" title="${quickMsg.appTitle}"/>
	</q:screenDeclaration>
	<q:body>		
		<gwt:dockPanel id="borderPanel" styleName="BorderPanel CommonPanel">
			<gwt:cell direction="north" height="140" horizontalAlignment="center" verticalAlignment="middle">
				<gwt:label id="welcomeLabel" text="${quickMsg.examplesMsg}" styleName="TitleLabel"/>
			</gwt:cell>
			<gwt:cell direction="center" horizontalAlignment="center">
				<gwt:verticalPanel id="vPanel" spacing="10">
					<crux:decoratedButton id="showcaseApp" text="${quickMsg.showcaseApp}" onClick="examplesController.showcaseApp" width="250" />
				</gwt:verticalPanel>				
			</gwt:cell>
		</gwt:dockPanel>
	</q:body>
</q:quickStartPage>
</html>

