<t:template
	xmlns="http://www.w3.org/1999/xhtml" 
    xmlns:t="http://www.sysmap.com.br/templates"
	xmlns:c="http://www.sysmap.com.br/crux" 
	xmlns:b="http://www.sysmap.com.br/crux/gwt"
	xmlns:w="http://www.sysmap.com.br/crux/widgets"
	xmlns:s="http://www.sysmap.com.br/templates/showcase"
	library="showcase" useController="wizardMultiPagesSourcesController">

	<style>
		.crux-TabPanelBottom
		{
			overflow: hidden !important;
		}
	</style>

	<w:decoratedPanel id="sourceBorder" width="90%" height="300">
		<w:widget>
			<w:rollingTabPanel id="wizardSources" height="100%" onBeforeSelection="wizardMultiPagesSourcesController.onSelectTab">
				<w:tab>
					<w:tabText>Page Source</w:tabText>
					<w:panelContent>
						<b:textArea id="pageSource" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Controller Source</w:tabText>
					<w:panelContent>
						<b:textArea id="controllerSource" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Step1 Page</w:tabText>
					<w:panelContent>
						<b:textArea id="pageStep1Source" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Step1 Controller</w:tabText>
					<w:panelContent>
						<b:textArea id="controllerStep1Source" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Step2 Page</w:tabText>
					<w:panelContent>
						<b:textArea id="pageStep2Source" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Step2 Controller</w:tabText>
					<w:panelContent>
						<b:textArea id="controllerStep2Source" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Step3 Page</w:tabText>
					<w:panelContent>
						<b:textArea id="pageStep3Source" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Step3 Controller</w:tabText>
					<w:panelContent>
						<b:textArea id="controllerStep3Source" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Step4 Page</w:tabText>
					<w:panelContent>
						<b:textArea id="pageStep4Source" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
				<w:tab>
					<w:tabText>Step4 Controller</w:tabText>
					<w:panelContent>
						<b:textArea id="controllerStep4Source" styleName="Source" readOnly="true" width="100%" style="height:100px"/>
					</w:panelContent>
				</w:tab>
			</w:rollingTabPanel>
		</w:widget>
	</w:decoratedPanel>
	<c:splashScreen/>		
</t:template>