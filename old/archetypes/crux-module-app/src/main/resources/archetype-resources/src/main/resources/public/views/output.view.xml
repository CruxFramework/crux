<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
	useController="homeController" 
	title="Hello, Crux!">
	
	<crux:styledPanel id="outerPanel" height="200px">
		<crux:formDisplay id="form">
			<crux:entry horizontalAlignment="center">
				<gwt:label id="helloLabel" text="Hello!"/>
			</crux:entry>
			<crux:entry horizontalAlignment="center">
				<crux:button id="backButton" text="Back" onSelect="homeController.back"/>
			</crux:entry>
		</crux:formDisplay>
	</crux:styledPanel>
	
</v:view>