<module>
	<!-- Inherit the Crux Core and GWT Gadget stuff  .          -->
	<inherits name='org.cruxframework.crux.core.Crux'/>
	<inherits name='com.google.gwt.ajaxloader.AjaxLoader' />
	<inherits name='com.google.gwt.gadgets.Gadgets' />
	
	<!-- Automatically write Gadget property accessor implementations -->
	<generate-with class="org.cruxframework.crux.gadget.rebind.gwt.UserPreferencesGenerator">
	  <when-type-assignable class="org.cruxframework.crux.gadget.client.features.UserPreferences"/>
	</generate-with>

	<!-- Produces the final Gadget manifest -->
	<define-linker name="gadget" class="org.cruxframework.crux.gadget.linker.GadgetLinker"/>
	<add-linker name="gadget"/>

	<!-- Specify the generator for registered widgets.     -->
	<generate-with class="org.cruxframework.crux.gadget.rebind.GadgetViewFactoryGenerator">
		<when-type-assignable class="org.cruxframework.crux.core.client.screen.views.ViewFactory" />
	</generate-with>

	<!-- Servlet used to handle RPC event calls.                -->
	<servlet path="/crux.rpc" class="org.cruxframework.crux.gadget.server.dispatch.GadgetRemoteServiceServlet"/>

	<!-- Specify the generator for RPC stubs.                   -->
	<generate-with class="org.cruxframework.crux.gadget.rebind.rpc.CruxGadgetServiceGenerator">
		<when-type-assignable class="com.google.gwt.user.client.rpc.RemoteService"/>
	</generate-with>

	<!-- Specify the generator for Gadget.                   -->
	<generate-with class="org.cruxframework.crux.gadget.rebind.gadget.GadgetGenerator">
		<when-type-assignable class="org.cruxframework.crux.gadget.client.Gadget"/>
	</generate-with>

	<!-- Specify the generator for GadgetInfo.                   -->
	<generate-with class="org.cruxframework.crux.gadget.rebind.gadget.GadgetInfoGenerator">
		<when-type-assignable class="org.cruxframework.crux.gadget.client.meta.GadgetInfo"/>
	</generate-with>

	<!-- Specify the implementation to URLRewriter.-->
	<replace-with class="org.cruxframework.crux.gadget.client.screen.GadgetURLRewriter">
		<when-type-assignable class="org.cruxframework.crux.core.client.screen.URLRewriter" />
	</replace-with>
	
	<!-- Implementations of the features -->
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.PubsubFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.PubsubFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.MiniMessageFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.MiniMessageFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.TabsFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.TabsFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.AdsFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.AdsFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.DynamicHeightFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.DynamicHeightFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.GoogleAnalyticsFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.GoogleAnalyticsFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.SetTitleFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.SetTitleFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.ViewFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.ViewFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.SetPrefsFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.SetPrefsFeature"/>
	</replace-with>
	<replace-with class="org.cruxframework.crux.gadget.client.features.impl.RpcFeatureImpl">
	  <when-type-is class="org.cruxframework.crux.gadget.client.features.RpcFeature"/>
	</replace-with>  
	
</module>
