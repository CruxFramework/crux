<x:xdevice xmlns="http://www.w3.org/1999/xhtml"
		   xmlns:x="http://www.cruxframework.org/xdevice"
           xmlns:gwt="http://www.cruxframework.org/crux/gwt"
		   xmlns:crux="http://www.cruxframework.org/crux/widgets"
		   xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
           useController="panelChoiceDisposalSmallController">
	
	<gwt:flowPanel id="mainContainer" styleName="mainContainer" width="100%" height="100%">
		<gwt:simplePanel id="viewSelectorContainer" width="100%" styleName="panelSelectorContainer">
			<gwt:listBox id="viewSelector" styleName="panelSelector" width="100%" onChange="panelChoiceDisposalSmallController.selectView"/>
		</gwt:simplePanel>
		<crux:swapViewContainer id="viewContainer" width="100%" styleName="activeViewContainer"/>
	</gwt:flowPanel>
	
</x:xdevice>