<x:xdevice xmlns="http://www.w3.org/1999/xhtml"
		   xmlns:x="http://www.cruxframework.org/xdevice"
           xmlns:gwt="http://www.cruxframework.org/crux/gwt"
		   xmlns:crux="http://www.cruxframework.org/crux/widgets"
		   xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
           useController="topMenuDisposalLargeController" height="100%">

	<gwt:flowPanel id="splitPanel" height="100%" width="100%" styleName="disposalWrapper">
		<gwt:simplePanel id="header" styleName="headerPanel">
			<gwt:simplePanel id="menuPanel" styleName="menuPanel" width="100%">
				<gwt:menuBar id="menuBar"/>
			</gwt:simplePanel>
		</gwt:simplePanel>
		<gwt:simplePanel id="contentPanel" styleName="contentPanel" width="100%">
			<crux:simpleViewContainer id="viewContainer" styleName="viewContainer" width="100%"/>
		</gwt:simplePanel>
	</gwt:flowPanel>
	
</x:xdevice>