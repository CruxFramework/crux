<x:xdevice xmlns="http://www.w3.org/1999/xhtml"
		   xmlns:x="http://www.cruxframework.org/xdevice"
           xmlns:gwt="http://www.cruxframework.org/crux/gwt"
		   xmlns:crux="http://www.cruxframework.org/crux/widgets"
		   xmlns:xdev="http://www.cruxframework.org/crux/crossDevice"
           useController="menuTabsDisposalSmallController">
	
	<gwt:flowPanel id="menuTabsHeaderSplitPanel" styleName="menuTabsHeaderSplitPanel" height="100%" width="100%" >
		<gwt:flowPanel id="menuTabsHeader" styleName="menuTabsHeader">
			<gwt:label id="showMenuButton" styleName="showMenuButton" onTouchStart="menuTabsDisposalSmallController.showMenu"/>
		</gwt:flowPanel>
		<crux:horizontalSwapPanel id="swapPanel" width="100%">
			<gwt:flowPanel id="menuPanel" styleName="menuEntriesContainer"/>
		</crux:horizontalSwapPanel>
	</gwt:flowPanel>
	
</x:xdevice>