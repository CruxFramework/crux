<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:crux="http://www.sysmap.com.br/crux/basic-widgets/1.0">

	<head>
		<title>test</title>
	</head>

	<body>
		<crux:decoratedStackPanel id="decoratedStackPanelWithHtmlTitle">
			<crux:stackItem>
				<crux:htmlTitle>
					<textarea rows="2" cols="2">Text here</textarea>
				</crux:htmlTitle>
				<crux:widget>
					<crux:anchor id="someWidget" accessKey="N"/>
				</crux:widget>
			</crux:stackItem>
		</crux:decoratedStackPanel>
		
		<crux:decoratedStackPanel id="decoratedStackPanelWithTextTitle">
			<crux:stackItem>
				<crux:textTitle>Text Title</crux:textTitle>
				<crux:widget>
					<crux:anchor id="someWidget" accessKey="N"/>
				</crux:widget>
			</crux:stackItem>
		</crux:decoratedStackPanel>
		
		<crux:decoratedStackPanel id="decoratedStackPanelWithoutTitle">
			<crux:stackItem>
				<crux:widget>
					<crux:checkBox id="aCheckBox"/>
				</crux:widget>
			</crux:stackItem>
		</crux:decoratedStackPanel>
		
	</body>

</html>

