<t:template xmlns="http://www.w3.org/1999/xhtml" 
    xmlns:t="http://www.cruxframework.org/templates"
	xmlns:c="http://www.cruxframework.org/crux" 
	xmlns:a="http://www.cruxframework.org/crux/widgets"
	xmlns:b="http://www.cruxframework.org/crux/gwt"
	library="showcase">
	<center>
		<a:collapsePanel id="#{id}Panel" width="98%" collapsed="true" onBeforeExpand="#{onLoadSource}" height="250">
			<a:title>
				<a:text>#{title}</a:text>
			</a:title>
			<a:body>
				<a:widget>
					<b:textArea id="#{id}" styleName="Source" readOnly="true" width="100%" height="222"/>
				</a:widget>
			</a:body>
		</a:collapsePanel>
	</center>
</t:template>
