	<head>
		<title>Rolling Panel</title>
		<link rel="stylesheet" type="text/css" href="style/css/standard.css" />
	</head>

	<body>

		<script type="text/javascript" src="showcase/showcase.nocache.js"></script>

		<center>
			<a:decoratedPanel id="scrollerHBorder" horizontalAlignment="center" width="450">
				<a:widget>
					<a:rollingPanel id="horizontalRollingPanel" width="100%" spacing="0" >
						<b:image id="image1" url="style/img/climb6.png"/>
						<b:image id="image2" url="style/img/climb5.png"/>
						<b:image id="image3" url="style/img/climb4.png"/>
						<b:image id="image4" url="style/img/climb3.png"/>
						<b:image id="image5" url="style/img/climb2.png"/>
						<b:image id="image6" url="style/img/climb1.png"/>
						<b:image id="image7" url="style/img/climb7.png"/>
						<b:image id="image8" url="style/img/climb8.png"/>
						<b:image id="image9" url="style/img/climb9.png"/>
						<b:image id="image10" url="style/img/climb10.png"/>
						<b:image id="image11" url="style/img/climb11.png"/>							
						<b:image id="image12" url="style/img/climb6.png"/>
						<b:image id="image13" url="style/img/climb5.png"/>
						<b:image id="image14" url="style/img/climb4.png"/>
