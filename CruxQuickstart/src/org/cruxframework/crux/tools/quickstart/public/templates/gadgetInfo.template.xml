											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="authorAffiliationLabel" styleName="FormLabel" text="${quickMsg.authorAffiliation}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.authorAffiliationHelpText}" id="authorAffiliationContext">
											     	<q:widget>
											     		<gwt:textBox id="authorAffiliation" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="authorEmailLabel" styleName="FormLabel" text="${quickMsg.authorEmail}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.authorEmailHelpText}" id="authorEmailContext">
											     	<q:widget>
											     		<gwt:textBox id="authorEmail" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="authorLinkLabel" styleName="FormLabel" text="${quickMsg.authorLink}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.authorLinkHelpText}" id="authorLinkContext">
											     	<q:widget>
											     		<gwt:textBox id="authorLink" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="authorLocationLabel" styleName="FormLabel" text="${quickMsg.authorLocation}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.authorLocationHelpText}" id="authorLocationContext">
											     	<q:widget>
											     		<gwt:textBox id="authorLocation" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="authorPhotoLabel" styleName="FormLabel" text="${quickMsg.authorPhoto}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.authorPhotoHelpText}" id="authorPhotoContext">
											     	<q:widget>
											     		<gwt:textBox id="authorPhoto" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="authorQuoteLabel" styleName="FormLabel" text="${quickMsg.authorQuote}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.authorQuoteHelpText}" id="authorQuoteContext">
											     	<q:widget>
											     		<gwt:textBox id="authorQuote" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
								</gwt:flexTable>							
							</w:widget>
						</w:body>
					</w:titlePanel>
					<w:titlePanel id="GadgetTitlePanel" width="95%">
						<w:title><w:text>${quickMsg.gadgetInfo}</w:text></w:title>
						<w:body>
							<w:widget>
								<gwt:flexTable id="gadgetInfo" cellSpacing="5">
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="useLongManifestNameLabel" styleName="FormLabel" text="${quickMsg.useLongManifestName}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.useLongManifestNameHelpText}" id="useLongManifestNameContext">
											     	<q:widget>
											     		<gwt:checkBox id="useLongManifestName" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="descriptionLabel" styleName="FormLabel" text="${quickMsg.description}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.descriptionHelpText}" id="descriptionContext">
											     	<q:widget>
											     		<gwt:textBox id="description" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="directoryTitleLabel" styleName="FormLabel" text="${quickMsg.directoryTitle}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.directoryTitleHelpText}" id="directoryTitleContext">
											     	<q:widget>
											     		<gwt:textBox id="directoryTitle" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="heightLabel" styleName="FormLabel" text="${quickMsg.height}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.heightHelpText}" id="heightContext">
											     	<q:widget>
											     		<gwt:integerBox id="height" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="widthLabel" styleName="FormLabel" text="${quickMsg.width}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.widthHelpText}" id="widthContext">
											     	<q:widget>
											     		<gwt:integerBox id="width" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="screenshotLabel" styleName="FormLabel" text="${quickMsg.screenshot}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.screenshotHelpText}" id="screenshotContext">
											     	<q:widget>
											     		<gwt:textBox id="screenshot" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="thumbnailLabel" styleName="FormLabel" text="${quickMsg.thumbnail}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.thumbnailHelpText}" id="thumbnailContext">
											     	<q:widget>
											     		<gwt:textBox id="thumbnail" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="titleLabel" styleName="FormLabel" text="${quickMsg.title}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.titleHelpText}" id="titleContext">
											     	<q:widget>
											     		<gwt:textBox id="title" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="titleUrlLabel" styleName="FormLabel" text="${quickMsg.titleUrl}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.titleUrlHelpText}" id="titleUrlContext">
											     	<q:widget>
											     		<gwt:textBox id="titleUrl" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
								</gwt:flexTable>
							</w:widget>
						</w:body>
					</w:titlePanel>	
					<w:titlePanel id="FeaturesTitlePanel" width="95%">
						<w:title><w:text>${quickMsg.gadgetFeatures}</w:text></w:title>
						<w:body>
							<w:widget>
								<gwt:flexTable id="gadgetFeaturesInfo">
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="scrollingLabel" styleName="FormLabel" text="${quickMsg.scrolling}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.scrollingHelpText}" id="scrollingContext">
											     	<q:widget>
											     		<gwt:checkBox id="scrolling" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="singletonLabel" styleName="FormLabel" text="${quickMsg.singleton}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.singletonHelpText}" id="singletonContext">
											     	<q:widget>
											     		<gwt:checkBox id="singleton" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="scalingLabel" styleName="FormLabel" text="${quickMsg.scaling}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.scalingHelpText}" id="scalingContext">
											     	<q:widget>
											     		<gwt:checkBox id="scaling" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="userPreferencesLabel" styleName="FormLabel" text="${quickMsg.userPreferences}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
