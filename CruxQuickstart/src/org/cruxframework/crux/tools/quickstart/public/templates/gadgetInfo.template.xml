			<gwt:scrollPanel id="gadgetScroll" width="100%" height="270">
				<gwt:verticalPanel id="gadgetInfoVPanel" height="100%" width="100%" spacing="15">
					<gwt:cell height="20">
						<gwt:label id="gadgetInfoTitleLabel" styleName="TitleLabel" text="${quickMsg.gadgetInfoTitle}"/>
					</gwt:cell>
					<w:titlePanel id="authorTitlePanel" width="95%">
						<w:title><w:text>${quickMsg.gadgetAuthorInfo}</w:text></w:title>
						<w:body>
							<w:widget>
								<gwt:flexTable id="gadgetAuthorInfo" cellSpacing="5">
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="authorLabel" styleName="FormLabel" text="${quickMsg.author}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.authorHelpText}" id="authorContext">
											     	<q:widget>
											     		<gwt:textBox id="author" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
