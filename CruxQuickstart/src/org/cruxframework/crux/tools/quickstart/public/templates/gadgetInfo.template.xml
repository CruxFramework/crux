											     		<gwt:textBox id="userPreferences" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="localesLabel" styleName="FormLabel" text="${quickMsg.locales}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.localesHelpText}" id="localesContext">
											     	<q:widget>
											     		<gwt:textBox id="locales" width="350"/>
											     	</q:widget>
											     </q:helpContext>
											</gwt:widget>						
										</gwt:cell>
									</gwt:row>
									<gwt:row>
										<gwt:cell width="150">
											<gwt:widget><gwt:label id="featuresLabel" styleName="FormLabel" text="${quickMsg.features}"/></gwt:widget>
										</gwt:cell>
										<gwt:cell>
											<gwt:widget>
												<q:helpContext helpText="${quickMsg.featuresHelpText}" id="featuresContext">
											     	<q:widget>
											     		<w:transferList id="features" width="350" leftListLabel="${quickMsg.availableFeatures}" 
											     												  rightListLabel="${quickMsg.usedFeatures}"
											     												  rightToLeftButtonText="&lt;&lt;"
											     												  leftToRightButtonText="&gt;&gt;"
											     												  visibleItemCount="5" onMoveItems="quickStartController.onFeaturesChange">
											     			<w:item location="left" label="ads" value="ads"/>
											     			<w:item location="left" label="dynamic height" value="dynamic-height"/>
											     			<w:item location="left" label="google analytics" value="com.google.gadgets.analytics"/>
											     			<w:item location="left" label="locked domain" value="locked-domain"/>
											     			<w:item location="left" label="osapi" value="osapi"/>
											     			<w:item location="left" label="rpc" value="rpc"/>
											     			<w:item location="left" label="set prefs" value="setprefs"/>
											     			<w:item location="left" label="set title" value="settitle"/>
											     			<w:item location="left" label="views" value="views"/>
											     		</w:transferList>
