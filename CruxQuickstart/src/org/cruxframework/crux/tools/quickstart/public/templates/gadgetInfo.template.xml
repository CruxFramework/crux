			xmlns:w="http://www.cruxframework.org/crux/widgets"
            xmlns:q="http://www.cruxframework.org/templates/quickstart"
            xmlns:t="http://www.cruxframework.org/templates" library="quickstart"
            useController="quickStartController"> 

	<gwt:dockPanel id="gadgetInfoCenterPanel" height="100%">
