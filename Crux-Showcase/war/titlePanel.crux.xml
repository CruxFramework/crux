<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.sysmap.com.br/crux" 
	xmlns:a="http://www.sysmap.com.br/crux/adv"
	xmlns:b="http://www.sysmap.com.br/crux/bas"
	xmlns:s="http://www.sysmap.com.br/templates/showcase">

	<head>
		<title>Title Panel</title>
		<link rel="stylesheet" type="text/css" href="style/css/standard.css" />
	</head>

	<body>

		<script type="text/javascript" src="showcase/showcase.nocache.js"></script>

		<c:screen />
	
		<b:dockPanel id="centeringPanel" width="100%" spacing="5">
			
			<b:cell horizontalAlignment="center" direction="north">
				<a:titlePanel id="textTitlePanel" width="700" height="80">
					<a:title>
						<a:text>Text Title</a:text>
					</a:title>
					<a:body>
						<a:text>
							This is a title panel with text content.
						</a:text>
					</a:body>
				</a:titlePanel>
			</b:cell>
		
			<b:cell horizontalAlignment="center" direction="center">
				<a:titlePanel id="htmlTitlePanel" width="700" height="80">
					<a:title>
						<a:html><a href="#">HTML Title</a></a:html>
					</a:title>
					<a:body>
						<a:html>
							<h3>This is a title panel with HTML content.</h3>
						</a:html>
					</a:body>
				</a:titlePanel>
			</b:cell>
		
			<b:cell horizontalAlignment="center" direction="south">
				<a:titlePanel id="widgetTitlePanel" width="700" height="80">
					<a:title>
						<a:widget><b:checkBox id="checkboxWidget" text="Widget Title" checked="true"/></a:widget>
					</a:title>
					<a:body>
						<a:widget>
							<b:textBox id="textBox" text="This is a title panel with widget content." width="500"/>
						</a:widget>
					</a:body>
				</a:titlePanel>
			</b:cell>
		
		</b:dockPanel>
		
		<s:sources/>
		
	</body>
</html>