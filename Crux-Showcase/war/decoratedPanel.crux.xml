<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.sysmap.com.br/crux/basic-widgets/1.0" 
	xmlns:a="http://www.sysmap.com.br/crux/advanced-widgets/1.0" 
	xmlns:xi="http://www.w3.org/2001/XInclude">

	<head>
		<title>Decorated Panel</title>
		<link rel="stylesheet" type="text/css" href="style/css/standard.css" />
	</head>

	<body>

		<script type="text/javascript" src="showcase/showcase.nocache.js"></script>

		<c:screen useController="decoratedButtonController,sourcesController"/>
	
		<center>

		<br/>

		<a:decoratedPanel id="textDecoratedPanel" width="700" height="80">
			<a:text>
				<h1>This is a decorated panel with text content.</h1>
			</a:text>
		</a:decoratedPanel>
		
		<a:decoratedPanel id="htmlDecoratedPanel" width="700" height="80">
			<a:html>
				<h3>This is a decorated panel with HTML content.</h3>
			</a:html>
		</a:decoratedPanel>
		
		<a:decoratedPanel id="widgetDecoratedPanel" width="700" height="80">
			<a:widget>
				<c:textBox id="textBox" text="This is a decorated panel with widget content." width="500"/>
			</a:widget>
		</a:decoratedPanel>
		
		</center>
		
		<br/>
		
		<xi:include href="sources.crux.xml"/>
		
	</body>
</html>