<center
    xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.sysmap.com.br/crux/basic-widgets/1.0" 
	xmlns:a="http://www.sysmap.com.br/crux/advanced-widgets/1.0">

		<xi:include href="sources.crux.xml"/>

		<a:collapsePanel id="messagesPanel" width="98%" collapsed="true" onBeforeExpand="i18nSourcesController.loadMessagesSource">
			<a:title>
				<a:text>View Messages source</a:text>
			</a:title>
			<a:body>
				<a:widget>
					<c:textArea id="messagesSourceFrame" styleName="Source" visibleLines="15" readOnly="true" width="100%"/>
				</a:widget>
			</a:body>
		</a:collapsePanel>		
		<a:collapsePanel id="propertiesPanel" width="98%" collapsed="true" onBeforeExpand="i18nSourcesController.loadPropertiesSource">
			<a:title>
				<a:text>View pt_BR.properties source</a:text>
			</a:title>
			<a:body>
				<a:widget>
					<c:textArea id="propertiesSourceFrame" styleName="Source" visibleLines="15" readOnly="true" width="100%"/>
				</a:widget>
			</a:body>
		</a:collapsePanel>		
</center>
