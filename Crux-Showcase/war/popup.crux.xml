<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.sysmap.com.br/crux/basic-widgets/1.0" 
	xmlns:a="http://www.sysmap.com.br/crux/advanced-widgets/1.0" 
	xmlns:xi="http://www.w3.org/2001/XInclude">

	<head>
		<title>Confirm</title>
		<link rel="stylesheet" type="text/css" href="style/css/standard.css" />
	</head>

	<body>

		<script type="text/javascript" src="showcase/showcase.nocache.js"></script>

		<c:screen useController="popupController,sourcesController"/>

		<table width="100%" cellpadding="15">
			<tr>
				<td align="center">
					<table cellspacing="5">
						<tr>
							<td>
								<c:textBox id="url" text="http://www.google.com"/>
							</td>
							<td>
								<a:decoratedButton id="browseButton" text="Browse" onClick="popupController.browse"/>
							</td>
						</tr>
						<tr>
							<td colspan="2">
								<c:label id="message"/>
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>		

		<xi:include href="sources.crux.xml"/>
		
	</body>
</html>