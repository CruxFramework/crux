<center
    xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:c="http://www.sysmap.com.br/crux/basic-widgets/1.0" 
	xmlns:a="http://www.sysmap.com.br/crux/advanced-widgets/1.0">

		<xi:include href="sources.crux.xml"/>

		<a:collapsePanel id="servicePanel" width="98%" collapsed="true" onBeforeExpand="serverCommunicationSourcesController.loadServiceSource">
			<a:title>
				<a:text>View Service source</a:text>
			</a:title>
			<a:body>
				<a:widget>
					<c:textArea id="serviceSourceFrame" styleName="Source" visibleLines="15" readOnly="true" width="100%"/>
				</a:widget>
			</a:body>
		</a:collapsePanel>		
		<a:collapsePanel id="serviceAsyncPanel" width="98%" collapsed="true" onBeforeExpand="serverCommunicationSourcesController.loadServiceAsyncSource">
			<a:title>
				<a:text>View ServiceAsync source</a:text>
			</a:title>
			<a:body>
				<a:widget>
					<c:textArea id="serviceAsyncSourceFrame" styleName="Source" visibleLines="15" readOnly="true" width="100%"/>
				</a:widget>
			</a:body>
		</a:collapsePanel>		
		<a:collapsePanel id="serviceImplPanel" width="98%" collapsed="true" onBeforeExpand="serverCommunicationSourcesController.loadServiceImplSource">
			<a:title>
				<a:text>View Service Implementation source</a:text>
			</a:title>
			<a:body>
				<a:widget>
					<c:textArea id="serviceImplSourceFrame" styleName="Source" visibleLines="15" readOnly="true" width="100%"/>
				</a:widget>
			</a:body>
		</a:collapsePanel>		
