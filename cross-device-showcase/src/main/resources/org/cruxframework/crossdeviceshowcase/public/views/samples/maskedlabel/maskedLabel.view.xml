<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	
	useController="maskedLabelController"
	onActivate="maskedLabelController.setDate" 
	useFormatter="dateFormatter" 
	title="Masked Label" >
	
	
	<style>
		.guilePanel
		{
			background: url(img/guile.png) no-repeat left;
			background-size: 100px;
			padding-left: 100px;
			height: 100px;
			padding-top: 15px;			
		}
	</style>
	
	<center>
		<crux:styledPanel id="panel">
			<gwt:flowPanel id="imgPanel" styleName="guilePanel">
				<crux:formDisplay id="form">
					<crux:entry label="Personagem:">
						<gwt:label id="nameLabel" text="Guile" styleName="gwt-Label valueLabel"/>
					</crux:entry>
					<crux:entry label="Data de Nascimento:">
						<crux:maskedLabel id="birthDate" formatter="dateFormatter" styleName="crux-MaskedLabel valueLabel"/>
					</crux:entry>
				</crux:formDisplay>
			</gwt:flowPanel>			
		</crux:styledPanel>
		
		
		<showcase:info title="MaskedLabel">
			<showcase:description>
				<p>
					MaskedLabel é um componente de exibição de informações que tem a capacidade de ser associado 
					a um Formatter para exibir dados tipados em formato textual amigável. 
				</p>
				<p> 
					Neste exemplo associamos o MaskedLabel a um formatador de data, para exibirmos
					a data de nascimento do personagem.
				</p> 
			</showcase:description>
		</showcase:info>
	</center>		
	
</v:view>