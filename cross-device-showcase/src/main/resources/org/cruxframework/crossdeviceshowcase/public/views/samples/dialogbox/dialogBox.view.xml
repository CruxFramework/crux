<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="dialogBoxController" title="Dialog Box"> 
	
	<center>
		
		<crux:styledPanel id="panel1" width="60%" height="200px">
			<crux:button id="showDialogBtn" text="Exibir Dialog Box" onSelect="dialogBoxController.openDialog"/>
		</crux:styledPanel>
		
		<showcase:info title="DialogBox">
			<showcase:description>
				<p>
					DialogBox são janelas flutuantes, que se sobrepõem à janela principal para realizar algum tipo 
					de comunicação adicional com usuário. São bastante úteis para exibir porções de dados que ocupariam 
					muito espaço na tela ou para tratar fluxos secundários nos casos de uso da aplicação.  					
				</p>
			</showcase:description>
		</showcase:info>
		
	</center>		
	
</v:view>