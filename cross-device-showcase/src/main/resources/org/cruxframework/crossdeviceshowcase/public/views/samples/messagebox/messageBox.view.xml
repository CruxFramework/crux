<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="messageBoxController" title="Message Box"> 
	
	<center>
		
		<crux:styledPanel id="styled">
			<gwt:flowPanel id="flow" width="100%">
				<crux:button id="showMessageBtnInfo" text="Exibir Informação" onSelect="messageBoxController.showInfo"/>
				<crux:button id="showMessageBtnSuccess" text="Exibir Sucesso" onSelect="messageBoxController.showSuccess"/>
				<crux:button id="showMessageBtnWarn" text="Exibir Aviso" onSelect="messageBoxController.showWarn"/>
				<crux:button id="showMessageBtnError" text="Exibir Erro" onSelect="messageBoxController.showError"/>
			</gwt:flowPanel>
		</crux:styledPanel>
		
		<showcase:info title="MessageBox">
			<showcase:description>
				<p>
					MessageBox é uma janela flutuante usada para exibir informações textuais ao usuário.
					De acordo com a categoria da mensagem exibida ( <code>INFO</code>, <code>SUCCESS</code>,
					<code>WARN</code> ou <code>ERROR</code>), o MessageBox apresenta um estilo visual específico.
				</p>
			</showcase:description>
		</showcase:info>
		
	</center>		
	
</v:view>