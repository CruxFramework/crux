<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="gwtTextBoxController" title="Textbox"
	onLoad="gwtTextBoxController.onLoad"> 
	
	<center>
		
		<crux:styledPanel id="panel1">
			<gwt:HTMLPanel id="html">
				<gwt:textBox id="gwtTxtBox" text="Eu sou um campo!" styleName="w200" />
				<hr />
				<h4>Estado:</h4>
				<div class="btn-Group">
					<gwt:radioButton name="color" onChange="gwtTextBoxController.handleDefault" id="default" text="Default" checked="true"></gwt:radioButton>
					<gwt:radioButton name="color" onChange="gwtTextBoxController.handleSuccess" id="success" text="Success"></gwt:radioButton>
					<gwt:radioButton name="color" onChange="gwtTextBoxController.handleWarning" id="warning" text="Warning"></gwt:radioButton>
					<gwt:radioButton name="color" onChange="gwtTextBoxController.handleError" id="error" text="Error"></gwt:radioButton>
				</div>
			</gwt:HTMLPanel>
		</crux:styledPanel>
		
		<showcase:info title="Textbox">
			<showcase:description>
				<p>
					Textboxes são campos de texto simples. Podem ser estilizados dependendo do seu estado, 
					e mostram de forma visal seu estado atual para o usuário.				
				</p>
			</showcase:description>
		</showcase:info>
		
	</center>		
	
</v:view>